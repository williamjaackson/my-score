generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String?  @unique
  password  String?
  createdAt DateTime @default(now())

  ratings    Rating[] @relation("RatedByUsers")
  sentRating Rating[] @relation("UserRatings")
}

enum RatingType {
  POSITIVE
  NEGATIVE
}

model Rating {
  id          String     @id @default(cuid())
  targetId    String
  target      User       @relation("RatedByUsers", fields: [targetId], references: [id])
  rating      RatingType
  comment     String?
  createdAt   DateTime   @default(now())
  authorId    String
  author      User       @relation("UserRatings", fields: [authorId], references: [id])
  lastRatedAt DateTime   @default(now()) @updatedAt
}
